<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Plus_Users">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="신장"
                android:textColor="#8303FF"
                android:textSize="25dp"
                android:translationX="150dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/heighteditText"
                android:layout_width="wrap_content"
                android:layout_height="43dp"
                android:layout_weight="1"
                android:ems="10"
                android:hint="신장"
                android:inputType="textPersonName" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="몸무게"
                android:textColor="#8303FF"
                android:textSize="25dp"
                android:translationX="150dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/weighteditText"
                android:layout_width="wrap_content"
                android:layout_height="43dp"
                android:layout_weight="1"
                android:ems="10"
                android:hint="몸무게"
                android:inputType="textPersonName" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="좋아하는 브랜드"
                android:textColor="#8303FF"
                android:textSize="25dp"
                android:translationX="150dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/brandeditText"
                android:layout_width="wrap_content"
                android:layout_height="43dp"
                android:layout_weight="1"
                android:ems="10"
                android:hint="브랜드"
                android:inputType="textPersonName" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="옷 종류"
                android:textColor="#8303FF"
                android:textSize="25dp"
                android:translationX="165dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:translationX="25dp">

            <RadioGroup
                android:id="@+id/Clothe_Kind2"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/Clothe_Whoodie2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="후드티" />

                <RadioButton
                    android:id="@+id/Clothe_MTM2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="맨투맨" />

                <RadioButton
                    android:id="@+id/Clothe_ShortT2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="반팔티" />

                <RadioButton
                    android:id="@+id/Clothe_Coat2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="코트" />

                <RadioButton
                    android:id="@+id/Clothe_Shirt2"
                    android:layout_width="72dp"
                    android:layout_height="wrap_content"
                    android:text="셔츠" />

                <RadioButton
                    android:id="@+id/Clothe_One2"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="원피스"
                    android:translationX="-343dp"
                    android:translationY="30dp" />

                <RadioButton
                    android:id="@+id/Clothe_Long2"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="롱패딩"
                    android:translationX="-352dp"
                    android:translationY="30dp" />

                <RadioButton
                    android:id="@+id/Clothe_Short2"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="숏패딩"
                    android:translationX="-360dp"
                    android:translationY="30dp" />

                <RadioButton
                    android:id="@+id/Clothe_Jacket2"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="자켓"
                    android:translationX="-370dp"
                    android:translationY="30dp" />

                <RadioButton
                    android:id="@+id/Clothe_Neet2"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="니트"
                    android:translationX="-390dp"
                    android:translationY="30dp" />

                <RadioButton
                    android:id="@+id/Clothe_Base2"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="야구잠바"
                    android:translationX="-745dp"
                    android:translationY="60dp" />

                <RadioButton
                    android:id="@+id/Clothe_Tranch2"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="트랜치"
                    android:translationX="-755dp"
                    android:translationY="60dp" />

                <RadioButton
                    android:id="@+id/Clothe_Guardigun2"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="가디건"
                    android:translationX="-775dp"
                    android:translationY="60dp" />

                <RadioButton
                    android:id="@+id/Clothe_Kara2"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="카라티"
                    android:translationX="-795dp"
                    android:translationY="60dp" />

                <RadioButton
                    android:id="@+id/Clothe_Nasi2"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="나시"
                    android:translationX="-820dp"
                    android:translationY="60dp" />
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="좋아하는 옷 색상톤"
                android:textColor="#8303FF"
                android:textSize="25dp"
                android:translationX="160dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioGroup
                android:id="@+id/Clothe_Color2"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/Color_Vivid2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="비비드톤"
                    android:translationX="25dp" />

                <RadioButton
                    android:id="@+id/Color_Pastel2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="파스텔톤"
                    android:translationX="25dp" />

                <RadioButton
                    android:id="@+id/Color_Dark2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="딥다크톤"
                    android:translationX="25dp" />

                <RadioButton
                    android:id="@+id/Color_Gray2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="그레이톤"
                    android:translationX="25dp" />

                <RadioButton
                    android:id="@+id/Color_White2"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="하얀색"
                    android:translationX="-240dp"
                    android:translationY="30dp" />

                <RadioButton
                    android:id="@+id/Color_Achromatic2"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="무채색"
                    android:translationX="-240dp"
                    android:translationY="30dp" />


            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="싫어하는 옷 색상톤"
                android:textColor="#8303FF"
                android:textSize="25dp"
                android:translationX="160dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:translationX="25dp">

            <RadioGroup
                android:id="@+id/Clothe_Color3"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/Color_Vivid3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="비비드톤"
                    android:translationX="25dp" />

                <RadioButton
                    android:id="@+id/Color_Pastel3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="파스텔톤"
                    android:translationX="25dp" />

                <RadioButton
                    android:id="@+id/Color_Dark3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="딥다크톤"
                    android:translationX="25dp" />

                <RadioButton
                    android:id="@+id/Color_Gray3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="그레이톤"
                    android:translationX="25dp" />

                <RadioButton
                    android:id="@+id/Color_White3"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="하얀색"
                    android:translationX="-260dp"
                    android:translationY="30dp" />

                <RadioButton
                    android:id="@+id/Color_Achromatic3"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="무채색"
                    android:translationX="-240dp"
                    android:translationY="30dp" />

            </RadioGroup>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="빨래 주기"
                android:textColor="#8303FF"
                android:textSize="25dp"
                android:translationX="155dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:translationX="25dp">

            <RadioGroup
                android:id="@+id/Clothe_Wash"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/Clothe_Monday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="월요일" />

                <RadioButton
                    android:id="@+id/Clothe_Tuesday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="화요일" />

                <RadioButton
                    android:id="@+id/Clothe_Wednesday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="수요일" />

                <RadioButton
                    android:id="@+id/Clothe_Thursday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="목요일" />

                <RadioButton
                    android:id="@+id/Clothe_Friday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="금요일" />

                <RadioButton
                    android:id="@+id/Clothe_Saturday"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="토요일"
                    android:translationX="-260dp"
                    android:translationY="30dp" />

                <RadioButton
                    android:id="@+id/Clothe_Sunday"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="일요일"
                    android:translationX="-240dp"
                    android:translationY="30dp" />

            </RadioGroup>

        </LinearLayout>

        <Button
            android:id="@+id/Enter2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="Enter"
            android:text="입력" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        </LinearLayout>



    </LinearLayout>
</RelativeLayout>