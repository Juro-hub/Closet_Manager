<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Plus_Clothes">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="옷 종류"
                android:textColor="#8303FF"
                android:textSize="25dp"
                android:translationX="150dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:translationX="25dp">

            <RadioGroup
                android:id="@+id/Clothe_Kind"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/Clothe_Whoodie"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="후드티" />

                <RadioButton
                    android:id="@+id/Clothe_MTM"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="맨투맨" />

                <RadioButton
                    android:id="@+id/Clothe_ShortT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="반팔티" />

                <RadioButton
                    android:id="@+id/Clothe_Coat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="코트" />

                <RadioButton
                    android:id="@+id/Clothe_Shirt"
                    android:layout_width="72dp"
                    android:layout_height="wrap_content"
                    android:text="셔츠" />

                <RadioButton
                    android:id="@+id/Clothe_One"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="원피스"
                    android:translationX="-343dp"
                    android:translationY="30dp" />

                <RadioButton
                    android:id="@+id/Clothe_Long"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="롱패딩"
                    android:translationX="-352dp"
                    android:translationY="30dp" />

                <RadioButton
                    android:id="@+id/Clothe_Short"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="숏패딩"
                    android:translationX="-360dp"
                    android:translationY="30dp" />

                <RadioButton
                    android:id="@+id/Clothe_Jacket"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="자켓"
                    android:translationX="-370dp"
                    android:translationY="30dp" />

                <RadioButton
                    android:id="@+id/Clothe_Neet"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="니트"
                    android:translationX="-390dp"
                    android:translationY="30dp" />

                <RadioButton
                    android:id="@+id/Clothe_Base"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="야구잠바"
                    android:translationX="-745dp"
                    android:translationY="60dp" />

                <RadioButton
                    android:id="@+id/Clothe_Tranch"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="트랜치"
                    android:translationX="-755dp"
                    android:translationY="60dp" />

                <RadioButton
                    android:id="@+id/Clothe_Guardigun"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="가디건"
                    android:translationX="-775dp"
                    android:translationY="60dp" />

                <RadioButton
                    android:id="@+id/Clothe_Kara"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="카라티"
                    android:translationX="-795dp"
                    android:translationY="60dp" />

                <RadioButton
                    android:id="@+id/Clothe_Nasi"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="나시"
                    android:translationX="-820dp"
                    android:translationY="60dp" />
            </RadioGroup>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="옷 호감도"
                android:textColor="#8303FF"
                android:textSize="25dp"
                android:translationX="150dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioGroup
                android:id="@+id/Clothe_Like"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/Like_Good"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="상"
                    android:translationX="50dp" />

                <RadioButton
                    android:id="@+id/Like_Soso"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="중"
                    android:translationX="115dp" />

                <RadioButton
                    android:id="@+id/Like_Bad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="하"
                    android:translationX="175dp" />
            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="옷 색상톤"
                android:textColor="#8303FF"
                android:textSize="25dp"
                android:translationX="150dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioGroup
                android:id="@+id/Clothe_Color"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/Color_Vivid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="비비드톤"
                    android:translationX="25dp" />

                <RadioButton
                    android:id="@+id/Color_Pastel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="파스텔톤"
                    android:translationX="25dp" />

                <RadioButton
                    android:id="@+id/Color_Dark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="딥다크톤"
                    android:translationX="25dp" />

                <RadioButton
                    android:id="@+id/Color_Gray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="그레이톤"
                    android:translationX="25dp" />

                <RadioButton
                    android:id="@+id/Color_White"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="하얀색"
                    android:translationX="-260dp"
                    android:translationY="30dp" />

                <RadioButton
                    android:id="@+id/Color_Achromatic"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="무채색"
                    android:translationX="-240dp"
                    android:translationY="30dp" />
            </RadioGroup>

        </LinearLayout>
        <Button
            android:id="@+id/Choose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Choose"/>
        <Button
            android:id="@+id/Enter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="Enter"
            android:text="입력" />

        <ImageView
            android:id="@+id/ivPreview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>